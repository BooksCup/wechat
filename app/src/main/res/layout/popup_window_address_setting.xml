<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pop_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_modify_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_popup_window"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_modify_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑"
            android:textColor="#353535"
            android:textSize="@dimen/common_item_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rl_delete_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item_click"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="删除"
            android:textColor="#353535"
            android:textSize="@dimen/common_item_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rl_copy_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item_click"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_copy_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="复制"
            android:textColor="#353535"
            android:textSize="@dimen/common_item_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rl_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_list_item_click"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/cancel"
            android:textColor="#353535"
            android:textSize="@dimen/common_item_text_size" />
    </RelativeLayout>

</LinearLayout>