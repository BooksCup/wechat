<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wechat_common_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/common_top_bar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/top_back_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:scaleType="centerInside"
            android:src="@drawable/btn_top_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="资料设置"
            android:textColor="@color/common_top_title"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:id="@+id/tv_edit_contact_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="@string/edit_contact"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <TextView
                        android:id="@+id/tv_edit_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="35dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/tv_edit_contact_temp"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:background="#dadada" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="@string/contact_privacy"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_share_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="把他推荐给朋友"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:background="#dadada" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_add_to_home_screen"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="@string/add_to_home_screen"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:background="#dadada" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_add_star"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="设为星标朋友"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_block"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="加入黑名单"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:background="#dadada" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_report"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_btn_margin_right"
                        android:text="投诉"
                        android:textColor="#353535"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_right_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/delete"
                        android:textColor="#FF0000"
                        android:textSize="@dimen/setting_text_size" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>