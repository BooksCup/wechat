<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_parent"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_list_item_click"
        android:clickable="true">


        <RelativeLayout
            android:id="@+id/re_avatar"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="#DBDFE0"
                android:padding="13dp">

                <ImageView
                    android:id="@+id/iv_avatar1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/default_user_avatar" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/re_avatar"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="爱久见人心"
            android:textColor="#353535"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="昨天"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/re_avatar"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/msg_state"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/msg_state_fail_resend"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="微软小冰：亲爱的 你最近好吗？？？"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/re_avatar"
            android:layout_alignRight="@id/re_avatar"
            android:layout_marginTop="3dp"
            android:layout_marginRight="7dp"
            android:background="@mipmap/bg_unread_count"
            android:gravity="center"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada" />
    </RelativeLayout>
</RelativeLayout>