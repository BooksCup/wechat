<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/common_top_bar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/top_bar_back_width"
            android:layout_height="@dimen/top_bar_back_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:scaleType="centerInside"
            android:src="@drawable/btn_top_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/mini_programs"
            android:textColor="@color/common_top_title"
            android:textSize="@dimen/top_bar_title_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/setting_btn_margin_right">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/top_bar_back_width"
                android:layout_height="@dimen/top_bar_back_height"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_main_activity_search_normal" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_mp_nearby"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/bg_list_item_click"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/discover_layout_padding_start"
                android:paddingEnd="@dimen/discover_layout_padding_end"
                tools:ignore="RelativeOverlap">

                <ImageView
                    android:id="@+id/iv_mp_nearby"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_icon_margin_left"
                    android:src="@mipmap/icon_mp_nearby" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_text_margin_left"
                    android:layout_toEndOf="@id/iv_mp_nearby"
                    android:text="@string/mp_nearby"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/discover_divider_margin_left"
                    android:background="@color/common_divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mp_popular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/bg_list_item_click"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/discover_layout_padding_start"
                android:paddingEnd="@dimen/discover_layout_padding_end">

                <ImageView
                    android:id="@+id/iv_mp_popular"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_icon_margin_left"
                    android:src="@mipmap/icon_mp_popular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_text_margin_left"
                    android:layout_toEndOf="@id/iv_mp_popular"
                    android:text="@string/mp_popular"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_list_item_click"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/discover_layout_padding_start"
                android:paddingEnd="@dimen/discover_layout_padding_end">

                <ImageView
                    android:id="@+id/iv_my_orders"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_icon_margin_left"
                    android:src="@mipmap/icon_mp_my_orders" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_text_margin_left"
                    android:layout_toEndOf="@id/iv_my_orders"
                    android:text="@string/my_orders"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/discover_divider_margin_left"
                    android:background="@color/common_divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_mp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/bg_list_item_click"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start"
                android:paddingEnd="@dimen/discover_layout_padding_end">

                <ImageView
                    android:id="@+id/iv_my_mp"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_icon_margin_left"
                    android:src="@mipmap/icon_mp_my_mp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_text_margin_left"
                    android:layout_toEndOf="@id/iv_my_mp"
                    android:text="@string/my_mp"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>