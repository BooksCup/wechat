<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/common_top_bar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/top_back_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:scaleType="centerInside"
            android:src="@drawable/btn_top_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="@string/more"
            android:textColor="@color/common_top_title"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_groups_in_common"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_list_item_click"
            android:clickable="true"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_groups_in_common_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:text="我和她的共同群聊"
                android:textColor="#353535"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/tv_groups_in_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_toRightOf="@id/tv_groups_in_common_temp"
                android:gravity="right"
                android:text="1个"
                android:textSize="@dimen/setting_text_size" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/icon_right_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_whats_up"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_list_item_click"
            android:clickable="true"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_whats_up_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:text="@string/whats_up"
                android:textColor="#353535"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/tv_whats_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_whats_up_temp"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:background="#dadada" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_from"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_list_item_click"
            android:clickable="true"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_from_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:text="@string/from"
                android:textColor="#353535"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_from_temp"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/setting_btn_margin_right"
                android:background="#dadada" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>