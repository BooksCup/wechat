<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="#ffffff"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/default_user_avatar"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="5dp" />

        <RelativeLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/me_layout_padding_left"
            android:layout_toRightOf="@id/sdv_avatar">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#353535"
                android:textSize="18.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_wx_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="微信号:"
                android:textColor="@color/common_item_grey"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/icon_qr_code" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/icon_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/sdv_avatar"
            android:background="@drawable/bg_add_user_status"
            android:padding="3dp">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/icon_add_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/iv_status"
                android:text="状态"
                android:textColor="@color/common_item_grey"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wechat_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:layout_marginTop="@dimen/me_thick_divider_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_wechat_pay"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_wechat_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_wechat_pay"
            android:text="@string/wechat_pay"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_favorites"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:layout_marginTop="@dimen/me_thick_divider_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_favorites"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_favorites" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_favorites"
            android:text="@string/favorites"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/me_divider_margin_left"
            android:background="@color/common_divider_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_posts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_my_posts"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_my_posts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_my_posts"
            android:text="@string/my_posts"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/me_divider_margin_left"
            android:background="@color/common_divider_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cards_offers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_cards_offers"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_cards_offers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_cards_offers"
            android:text="@string/cards_offers"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/me_divider_margin_left"
            android:background="@color/common_divider_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sticker_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_sticker_gallery"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_sticker_gallery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_sticker_gallery"
            android:text="@string/sticker_gallery"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_layout_height"
        android:layout_marginTop="@dimen/me_thick_divider_height"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/me_layout_padding_left">

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="@dimen/me_icon_width"
            android:layout_height="@dimen/me_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_margin_left"
            android:src="@mipmap/icon_me_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_text_margin_left"
            android:layout_toRightOf="@id/iv_settings"
            android:text="@string/settings"
            android:textColor="#353535"
            android:textSize="@dimen/me_text_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_right_arrow" />
    </RelativeLayout>
</LinearLayout>